<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_login_dialog_bg"
    android:id="@+id/rl_hint_background">

    <LinearLayout
        android:id="@+id/dialog_ll"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hint_dialog_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hint_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorTextBlack"/>

        <TextView
            android:id="@+id/hint_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/title_item_color"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/news_tab_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hint_dialog_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/my_integral_tablayout_indicator"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/news_tab_line" />

            <TextView
                android:id="@+id/hint_dialog_btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/my_integral_tablayout_indicator"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>